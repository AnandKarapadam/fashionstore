<%- include("../partials/user/navbar.ejs") %>

    <div class="row mt-5 pt-5">
        <div class="col-md-3 mt-5 d-none d-lg-block">
    <div class="sidebar-content ms-5 w-100" style="position: sticky;top: 100px;">
        <div class="bg-dark rounded-3 mb-4">
            <h6 class="text-white d-flex align-items-center py-3 ps-2 text-truncate"><i class="bi bi-person-circle fs-4 me-2"></i>Hello Anand KV</h6>
        </div>
        <ul class="nav flex-column ">
          <li class="nav-item"><a class="nav-link text-dark border" href="/profile"><i class="bi bi-person-circle me-2"></i> Profile</a></li>
          <li class="nav-item"><a class="nav-link text-dark border" href="/orders"><i class="bi bi-inboxes-fill me-2"></i> Orders</a></li>
          <li class="nav-item"><a class="nav-link text-dark border" href="/wallet"><i class="bi bi-wallet me-2"></i> Wallet</a></li>
          <li class="nav-item"><a class="nav-link text-dark border" href="/address"><i class="bi bi-geo me-2"></i> Address</a></li>
          <li class="nav-item"><a class="nav-link text-dark border text-truncate" href="/delet-account"><i class="bi bi-trash2-fill me-2"></i> Delete Account</a></li>
          <li class="nav-item"><a class="nav-link text-dark border" href="/logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
        </ul>
      </div>
        </div>

        <!-- Main Session -->
        <div class="col-md-9 mt-5 mx-auto">
            <div id="mainContent" class="main-content container">
    <div class="card shadow rounded-4 mx-auto p-4 ps-5" style="max-width: 600px;">
      <h4 class="card-title text-center mb-2">PROFILE</h4>
      <hr>
      <div class=" mb-2">
        <img src="/uploads/re-image/<%= user.image %>" alt="image" style="width: 100px;height: 100px;border-radius: 50px;">
      </div>

      <div class="row mb-2">
  <div class="col-3 fw-bold">Name:</div>
  <div class="col-9 fw-semibold"><%= user.name %></div>
</div>

<div class="row mb-2">
  <div class="col-3 fw-bold">Email:</div>
  <div class="col-9"><%= user.email %></div>
</div>
<div class="row mb-2">
  <div class="col-3 fw-bold">Phone:</div>
  <div class="col-9"><%= user.phone %></div>
</div>

<div class="row mb-2">
  <div class="col-3 fw-bold">Address:</div>
  <div class="col-9">
    <%= address?.address[0].city %> ,
    LandMark:<%= address?.address[0].landMark %>,
    <%= address?.address[0].state %>,
    pin: <%= address?.address[0].pincode %>
  </div>
</div>

<div class="row mb-2">
  <div class="col-3 fw-bold">Gender:</div>
  <div class="col-9"><%= user.gender?.toUpperCase() %></div>
</div>
<div class=" d-flex justify-content-center mt-3 align-items-center">
    <a href="/edit-profile" class="btn btn-dark "><i class="bi bi-pencil-square mx-2"></i>Edit Profile</a>
  </div>

    
    </div>
    </div>
    </div>
    </div>
