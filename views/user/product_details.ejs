<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


      <script>
        const mainImage = document.getElementById("mainImage");
        const lens = document.getElementById("lens");
        const result = document.getElementById("zoomResult");

        const zoom = 2;
        function changeMainImage(thumb) {
          const newSrc = thumb.src;
          mainImage.src = newSrc;
          lens.style.backgroundImage = `url('${newSrc}')`;
        }



        mainImage.addEventListener("mouseenter", () => {
          lens.style.display = "block";
          lens.style.backgroundImage = `url('${mainImage.src}')`;
        });

        mainImage.addEventListener("mouseleave", () => {
          lens.style.display = "none";
        });

        mainImage.addEventListener("mousemove", (e) => {
          const bounds = mainImage.getBoundingClientRect();
          const x = e.pageX - bounds.left - window.scrollX;
          const y = e.pageY - bounds.top - window.scrollY;

          const lensSize = 100;
          const lensX = x - lensSize / 2;
          const lensY = y - lensSize / 2;

          lens.style.left = lensX + "px";
          lens.style.top = lensY + "px";
          lens.style.backgroundPosition = `-${x * 2 - lensSize / 2}px -${y * 2 - lensSize / 2}px`;
        });



        const scrollContainer = document.getElementById('cardRow');

        function scrollLeft() {
          scrollContainer.scrollBy({ left: -200, behavior: 'smooth' });
        }

        function scrollRight() {
          scrollContainer.scrollBy({ left: 200, behavior: 'smooth' });
        }



        // Quantity inc/dec function
        function changeQuantity(change) {
          const qtyInput = document.getElementById('quantity');
          const currentQty = parseInt(qtyInput.value);
          const maxQty = parseInt(qtyInput.max);
          const minQty = parseInt(qtyInput.min);

          let newQty = currentQty + change;
          if (newQty < minQty) newQty = minQty;
          if (newQty > maxQty) newQty = maxQty;

          qtyInput.value = newQty;
        }

        const cartForm = document.getElementById("cartForm");
        const visibleQuantity = document.getElementById("quantity");
        const hiddenQuantity = document.getElementById("hiddenQuantity");

        cartForm.addEventListener("submit",function(){
          hiddenQuantity.value = visibleQuantity.value;
        })

        
      </script>

<script>
  async function addToWishlist(productId,e) {
          console.log("productId",productId);
          try {
            e.preventDefault()
            
            const response = await fetch(`/wishlist/add/${productId}`,{
              method:"POST",
              headers:{
                "Content-Type":"application/json"
              }
            })

            const data = await response.json();

            
            if(!response.ok){
              
              Swal.fire("error!", data.message||"Error in adding product", "warning")
            }
            else{
                window.location.href = "/wishlist";
            }

          } catch (error) {
            console.error("Error: ",error.message);
            Swal.fire("error!",error.message||"Error in wishlist","warning");
            
          }
        }
</script>
</body>

</html>