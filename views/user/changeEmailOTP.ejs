<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forget Password</title>
  <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<style>
  h2 {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    letter-spacing: 2px;
  }

  p {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  }

  .btn {
    width: 100px;
  }

  .form-control {
    width: 40px;
    height: 40px;
    font-size: 24px;
    background-color: lightgrey;
  }

  .shadow {
    max-width: 100%; /* make it responsive */
    width: 100%;
  }

  .image {
    width: 100%; /* allow to scale */
    height: auto;
    border-radius: 10px;
  }

  .otp-image {
    flex-wrap: nowrap;
  }
  @media (max-width:500px) {
    .image{
      display: none;
    }
  }
  @media (max-width:700px) {
    h2 {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    letter-spacing: 2px;
    font-size: 15px;
  }

  p {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  }

  .btn {
    width: 100px;
  }

  .form-control {
    width: 30px;
    height: 30px;
    font-size: 15px;
    background-color: lightgrey;
  }

  .shadow {
    max-width: 100%; /* make it responsive */
    width: 100%;
  }

  .image {
    width: 100%; /* allow to scale */
    height: auto;
    border-radius: 10px;
  }

  .otp-image {
    flex-wrap: nowrap;
  }
  }

  
  
</style>
</head>
<body>
   

   <div class="container mt-5 pt-4 d-flex justify-content-center">
    <div class="custom-box w-100" style="max-width: 850px;">
    <div class="row mt-5 border shadow rounded-4 p-5 g-1">
      <div class="col-md-6 otp-image">
        <img src="/images/otp-img.jpg" class="image" alt="">
      </div>
      <div class="col-md-6">
        <h2 class="text-center fw-semibold mb-3">OTP Send to mail</h2>
        <p class="text-center mb-4">Please check your email</p>
        <div class="container">
          <form id="otp-form">
            <div class="d-flex justify-content-center gap-2 mb-3">
                <% for (let i = 0; i < 5; i++) { %>
                     <input type="text" maxlength="1" class="form-control text-center otp-input" placeholder="0">
                                    
                <% } %>
            </div>
            <div class="text-center mb-3">
              <button  id="otpTimerBtn" class="border-0" disabled>
                 
              </button>
              <a href="#" id="resendOTP" onclick="return resendOTP()" class="btn d-none btn-outline-secondary btn-sm">Resend OTP</a>
            </div>
            <div class="text-center">
              
            </div>
            <div class="text-center mt-3 mb-2">
                <button type="submit" class="btn btn-dark ">Verify OTP</button>
            </div>
          </form>
        </div>
        <div class="text-center">
          <a href="/profile" class="text-secondary fw-semibold text-decoration-none">Go back to profile page</a>
        </div>
      </div>
    </div>
    </div>
   </div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!-- Ajax Query -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


   <!-- Bootstrap JS Bundle (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>


  document.getElementById("otp-form").addEventListener("submit",async function(e) {
    
    e.preventDefault();
    const otpInput = document.querySelectorAll(".otp-input");
    let otp="";
    
    for(let input of otpInput){
      const val = input.value.trim();
      if(val === ""||isNaN(val)){
        Swal.fire({
          icon:"warning",
          title:"Invalid OTP",
          text:"Please enter all 5 digits",
          confirmButtonColor:'#3085d6',
        })
        input.focus();
        return false;
      }
      otp+=val;
    }

       $.ajax({
        type:"POST",
        url:`/change-email/otp`,
        data:{otp:otp},
        success:function(response){
          if(response.success){
            Swal.fire({
            icon:"success",
            title:"OTP Verified!",
            showConfirmButton:false,
            timer:1500
          }).then(()=>{
            window.location.href = response.redirectUrl;
          })
          }else{
            Swal.fire({
              icon:"error",
              title:"Invalid OTP",
              text:response.message,
            })
          }
        },
        error:function(){
          Swal.fire({
            icon:"error",
            title:"Error",
            text:"Failed to verify OTP. Please try again."
          })
        }
       })
    return false;
  })
  
  let timeLeft = 60; // 60 seconds
  let otpTimeInterval;
  const button = document.getElementById("otpTimerBtn"); 
  
  
  function updateTimerColor(percentage){
    if(percentage > 50){
        button.style.color = "#28a745";
    }
    else if(percentage>25){
        button.style.color = "#ffc107";
    }else{
        button.style.color = "#dc3545";
    }
  }

  function startOtpTimer(){
     otpTimeInterval = setInterval(function(){
        const minutes  = Math.floor(timeLeft/60);
        const second = timeLeft%60;
        
        button.textContent = `Resend-${minutes}:${second < 10?'0':''}${second}`;
        updateTimerColor((timeLeft/60)*100)
        if(--timeLeft<0){
            clearInterval(otpTimeInterval);
            button.classList.add("d-none");
            document.getElementById("resendOTP").classList.remove("d-none");
        }
     },1000);
  }
initializeOtpTimer();

  function initializeOtpTimer(){
    clearInterval(otpTimeInterval);
    timeLeft=60;
    startOtpTimer();
  }

  function resendOTP(){
    clearInterval(otpTimeInterval);
    timeLeft = 60;
    startOtpTimer();
    document.getElementById("resendOTP").classList.add("d-none");
    button.classList.remove("d-none");
    button.disabled=true;
    $.ajax({
      type:"POST",
      url:`/change-email/resend-otp`,
      success:function(response){
        if(response.success){
          Swal.fire({
            icon:"success",
            title:"Success",
            text:response.message,
            showConfirmButton:false,
            timer:1500
          })
        }else{
          Swal.fire({
            icon:"warning",
            title:"Error!",
            text:response.message
          })
        }
      },
      error:function(){
        Swal.fire({
          icon:"error",
          title:"Error",
          text:"Failed to resend OTP Please try again!"
        })
      }
    })
  }
  
  document.querySelectorAll(".otp-input").forEach((input,index,inputs)=>{
    input.addEventListener("input",function(){
      if(input.value.length === 1 && index<inputs.length-1){
      inputs[index+1].focus();
    }
    })
    input.addEventListener("keydown",function(e){
      if(e.key === "Backspace" && input.value === "" && index>0){
        inputs[index-1].focus()
      }
    })
  })
 
</script>
</body>
</html>