    <!-- 1. Product Summary -->

    <% cartItems.slice().reverse().forEach(item=>{ %>
    <div class="d-flex justify-content-between mb-2">
      <div><span class="fw-semibold"><%= item.quantity %> × <%= item.productId.productName %></span></div>
      <div><span class="fw-semibold text-success <%= item.productId.isBlocked ? 'text-decoration-line-through text-danger' : '' %>">₹<%= item.quantity * item.productId.salePrice %></span></div>
    </div>
    <% }) %>

    <!-- 2. Delivery Charges -->
