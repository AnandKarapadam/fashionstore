    <div class="row pt-4 mt-5 mx-md-3">
      <div class="col-8 mt-5 px-4 bg-light border rounded-3 shadow-sm py-3">
        <% items.slice().reverse().forEach(item=>{ %>
       <div class="container bg-white border p-3 mb-3 rounded shadow-sm">

    <div class="row">
    <!-- Left: Image + Quantity -->
    <div class="col-md-3 d-flex flex-column justify-content-between">
      <a href="/product-details/<%= item.productId._id  %>" class="text-decoration-none">
      <div style="width: 120px; height: 150px;" class="d-flex ms-3 align-items-center justify-content-center">
        <img src="/uploads/re-image/<%= item.productId.productImage[0] %>" 
       alt="Product Image"
       class="img-fluid rounded"
       style="width: 100%; height: 100%; object-fit: contain;">
      </div>
      </a>
      <!-- Quantity -->
      <div class="bg-light p-1 rounded text-center" style="width: 150px;">
        <label class="fw-semibold small d-block mb-1">Qty:</label>
        <div class="input-group input-group-sm justify-content-center" style="width: 100px; margin: auto;">
          <button class="btn btn-outline-secondary" type="button" data-product-id="<%= item.productId._id %>" onclick="changeQty(this, -1)">−</button>
          <input type="text" class="form-control text-center form-control-sm quantity-input" value="<%= item.quantity %>" readonly>
          <button class="btn btn-outline-secondary" type="button" data-product-id="<%= item.productId._id %>" onclick="changeQty(this, 1)">+</button>
        </div>
      </div>
    </div>

    <!-- Right: Product Details -->
    <div class="col-md-9 d-flex flex-column justify-content-between">
      <div class="d-flex justify-content-between">
        <div>
          <h5 class="fw-bold mb-1"><%= item.productId.productName %></h5>
          <p class="text-muted mb-2">
           <%= item.productId.description.split(" ").slice(0, 10).join(" ") %>...
          </p>
          <p class="fw-semibold mb-2">Color: <span class="text-muted"><%= item.productId.color %></span></p>
          <% if(item.productId.isBlocked){%>
          <p class="text-danger fw-semibold">This product is no longer available</p>
          <%} else{%>
            <p class="text-dark fw-bold ">Actual price: <span class="text-success text-decoration-line-through">₹<%= item.productId.regularPrice %></span></p>
          <%}%>
            <% if(item.productId.productOffer) {%>
              <p class="text-danger fw-bold"><%= item.productId.productOffer %>% off</p>
            <%}%>
        </div>
        <div>
          <h5 class="text-success">₹<%= item.productId.salePrice %></h5>
          <button class="btn btn-sm btn-light" onclick="removeFromCart('<%= item._id %>')">Remove</button>
          
        </div>
      </div>
    </div>
  </div>

  <!-- Row 2: Shipping + InStock + Free Delivery -->
  <div class="row mt-3 align-items-center">
    <div class="col-md-6 d-flex align-items-top flex-wrap">
      <span class=" me-2 mb-1">Status <br><small class="text-muted">• <%= item.status %> </small></span>
      <% if(item.productId.status === "Available" && !item.productId.quantity <=0 && !item.productId.isBlocked ){ %>
      <span class="text-success ms-2 fw-bold me-2 mb-1">Available</span>
      <% } else if(item.productId.status === "Discontinued" || item.productId.isBlocked){ %>
      <span class="text-danger ms-2 fw-bold me-2 mb-1">Currently unavailable</span>
      <%} else if(item.productId.quantity === 0){%>
      <span class="text-danger ms-2 fw-bold me-2 mb-1">Out Of Stock</span>
      <%} %>  
    </div>
    <div class="col-md-6 text-end">
      <span class="text-dark fw-bold">Free Delivery</span><br>
      
    </div>
  </div>
  
</div>
<% })%>

<div class="container mt-3" id="paginationSection">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-4" style="margin-right: -50px;">
                  <% const maxVisiblePages=3; let startPage=Math.max(1, currentPage - 1); let endPage=startPage +
                        maxVisiblePages - 1; if (endPage> totalPages) {
                        endPage = totalPages;
                        startPage = Math.max(1, endPage - maxVisiblePages + 1);
                        }
                        %>

                        <!-- Previous Button -->
                        <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= parseInt(currentPage) - 1 %>&search=<%= search %>">&laquo;</a>
                        </li>

                        <!-- Page Numbers -->
                        <% for (let i=startPage; i <=endPage; i++) { %>
                            <li class="page-item <%= i == currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&search=<%= search %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>

                                <!-- Next Button -->
                                <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                                    <a class="page-link"
                                        href="?page=<%= parseInt(currentPage) + 1 %>&search=<%= search %>">&raquo;</a>
                                </li>
                </ul>
            </nav>
        </div>

      </div>
      <div class="col-4">

        
  <div class="p-3 shadow-sm border s rounded-3" style="position: sticky;background-color: rgb(212, 212, 212);top: 120px;">

    <div class="mb-1">
      <h5 class="fw-bold text-center">Order Summary</h5>
    </div>

