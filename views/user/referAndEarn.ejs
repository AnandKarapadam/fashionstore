<%- include("../partials/user/header.ejs") %>
    <%- include("../partials/user/navbar.ejs") %>

        <div class="row mt-5 pt-5">
            <div class="col-md-3 mt-5 d-none d-lg-block">
                <div class="sidebar-content ms-5 w-100" style="position: sticky;top: 100px;">
                    <div class="bg-dark rounded-3 mb-4">
                        <h6 class="text-white d-flex align-items-center py-3 ps-2 text-truncate"><i
                                class="bi bi-person-circle fs-4 me-2"></i>Hello Anand KV</h6>
                    </div>
                    <ul class="nav flex-column ">
                        <li class="nav-item"><a class="nav-link text-dark border" href="/profile"><i
                                    class="bi bi-person-circle me-2"></i> Profile</a></li>
                        <li class="nav-item"><a class="nav-link text-dark border" href="/orders"><i
                                    class="bi bi-inboxes-fill me-2"></i> Orders</a></li>
                        <li class="nav-item"><a class="nav-link text-dark border" href="/profile/wallet"><i
                                    class="bi bi-wallet me-2"></i> Wallet</a></li>
                        <li class="nav-item"><a class="nav-link text-dark border" href="/address"><i
                                    class="bi bi-geo me-2"></i> Address</a></li>
                        <li class="nav-item"><a class="nav-link text-dark border" href="/profile/refer&earn"><i
                                    class="bi bi-gift me-2"></i> Reffer & Earn</a></li>
                        <li class="nav-item"><a class="nav-link text-dark border text-truncate" href="/delete-account" onclick="confirmDeleteEvent(event)"><i class="bi bi-trash2-fill me-2" ></i> Delete Account</a></li>

                        <li class="nav-item"><a class="nav-link text-dark border" href="/logout"><i
                                    class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
                    </ul>
                    <form action="/delete-account" method="post" style="display: none;" id="deleteAccountForm" ></form>
                </div>
            </div>

            <!-- Main Session -->
            <div class="col-md-9 mt-5 mx-auto">
                <div id="mainContent" class="main-content container">
                    <div class="card shadow rounded-4 mx-auto p-4 ps-5" style="max-width: 600px;">
                        <h4 class="card-title text-center mb-2">Refer & Earn <i class="bi bi-gift me-2"></i></h4>
                        <hr>
                        <div
                            class="bg-light shadow-sm py-3 d-flex border border-1 rounded-3 align-items-center flex-column justify-content-center">
                            <div class="d-flex flex-column align-items-center justify-content-center ">
                                <p class="my-auto me-2 fw-semibold mb-2">Referral Code</p>
                                <div class="d-flex align-items-center bg-white shadow-sm border border-1 rounded-3">
                                    <input type="text" id="referralCode"
                                        class="form-control form-control-sm ms-3 border border-0 no-border-focus " readonly
                                        value="<%= user.referralCode %>" placeholder="<% user.referralCode %>">
                                    <button onclick="copyRefferalCode()" type="button" class="btn">
                                        <i class="bi bi-copy first text-primary"></i>
                                    </button>
                                </div>

                                <span id="copyMessage"
                                    style="margin-left: 300px; color: green; display: none;z-index: 1000;position: absolute; margin-top: 35px;">Copied!</span>
                            </div>
                            <hr class="w-75 my-3" />
                            <div class="d-flex align-items-center flex-column justify-content-center mt-2">

                                <p class="my-auto fw-semibold mb-2">Reward Coupon</p>
                                <% if( rewardCoupons.length>0 && rewardCoupons) {%>
                                    <% rewardCoupons.forEach(coupon=>{%>
                                <div
                                    class="d-flex align-items-center justify-content-center bg-white shadow-sm border border-1 rounded-3 ms-2 ">
                                    <input type="text" id="referralCoupon"
                                        class="form-control form-control-sm ms-1 mb-2 border border-0 no-border-focus" readonly
                                        value="<%= coupon.name %>" placeholder="<%= coupon.name %>">
                                    <button onclick="copyReferralCoupon()" class="btn">
                                        <i class="bi bi-copy second text-primary"></i>
                                    </button>
                                </div>
                                <span id="copyMessageCoupon"
                                    style="margin-left: 300px; color: green; display: none;z-index: 1000;position: absolute;margin-top: 30px;">Copied!</span>
                                    <%})%>
                                <% }else { %>
                                    <div class="d-flex align-items-center justify-content-center bg-white shadow-sm border border-1 rounded-3 ms-2">
                                        <input type="text" placeholder="No Rewards Yet.." class="form-control form-control-sm" readonly>
                                    </div>
                                 <% } %>   
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <%- include("../partials/user/footer.ejs") %>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function confirmDeleteEvent(e){
        e.preventDefault();

        Swal.fire({
          icon:"Warning",
          text:"This will permentaly delete your account!",
          title:"Are you sure?",
          showCancelButton:true,
          confirmButtonText:"Yes,delete it",
          cancelButtonText:"Cancel"
        }).then((result)=>{
          if(result.isConfirmed){
            document.getElementById("deleteAccountForm").submit()
          }
        })
      }
    </script>
            <script>
                function copyRefferalCode() {
                    let refCode = document.getElementById("referralCode");

                    refCode.select();
                    refCode.setSelectionRange(0, 99999);

                    document.execCommand("copy");
                    let icon = document.querySelector(".first");
                    icon.classList.remove("text-primary");
                    icon.classList.add("text-muted");

                    const msg = document.getElementById('copyMessage');
                    msg.style.display = "inline";
                    setTimeout(() => {
                        icon.classList.remove("text-muted");
                        icon.classList.add("text-primary");
                        msg.style.display = "none";
                    }, 1000)

                }
                function copyReferralCoupon() {
                    let refCoupon = document.getElementById("referralCoupon");
                    refCoupon.select();
                    refCoupon.setSelectionRange(0, 99999);

                    document.execCommand("copy");
                    let msg = document.getElementById("copyMessageCoupon");
                    let icon = document.querySelector(".second");
                    icon.classList.remove("text-primary");
                    icon.classList.add("text-muted");

                    msg.style.display = "inline";
                    setTimeout(() => {
                        msg.style.display = "none";
                        icon.classList.remove("text-muted");
                        icon.classList.add("text-primary");
                    }, 1000)
                }
            </script>
            </body>

            </html>