    <div class="card shadow rounded-4 mx-auto p-4" style="max-width: 600px;">
      <h4 class="card-title text-center mb-4">Edit Profile</h4>

    <form action="/profile/update" id="editForm" method="post" enctype="multipart/form-data">
      <div class="text-center mb-3">
  <div class="position-relative d-inline-block" style="width: 100px; height: 100px;">
    <!-- Profile Image -->
    <img src="/uploads/re-image/<%= user.image %>" alt="img" id="profilePreview"
         class="border border-1 rounded-circle"
         style="width: 100px; height: 100px; object-fit: cover;">

    <!-- Hidden File Input -->
    <input type="file" id="profilePicInput" name="image"  class="d-none">

    <!-- Camera Icon Label -->
    <label for="profilePicInput"
           class="position-absolute bottom-0  "
           style="cursor: pointer;transform: translate(-110%, 15%);">
      <i class="bi bi-camera-fill text-success fs-5"></i>
    </label>
  </div>
