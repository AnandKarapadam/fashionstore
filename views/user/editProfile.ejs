      <div class="mb-4 d-flex align-items-center">
        <label for="name" class="form-label fw-bold me-2">Name:</label>
        <input type="text" class="form-control bg-light border-secondary" name="name" id="name" value="<%= user.name %> " />
        <div class="text-danger small" id="nameError"></div>
      </div>
      <div class="mb-4 d-flex align-items-center">
        <label for="email" class="form-label fw-bold me-2">Email:</label>
        <input type="email" class="form-control bg-light border-secondary" name="email" id="email" value="<%= user.email %>" readonly/>
        <button type="button" id="editEmailBtn" class="btn border-0">
          <i class="bi bi-pencil-fill"></i>
        </button>
        <div class="text-danger small" id="emailError"></div>
      </div>
      <div class="mb-4 d-flex align-items-center">
        <label for="phone" class="form-label fw-bold me-2">Phone:</label>
        <input type="text" class="form-control bg-light border-secondary" name="phone" id="phone" value="<%= user.phone %>" />
        <div class="text-danger small" id="phoneError"></div>
      </div>
      <div class="mb-4 row">
  <label class="form-label fw-bold col-12 col-sm-3 mb-2 mb-sm-0">Gender:</label>
  
  <div class="col-12 col-sm-9 d-flex flex-column flex-sm-row align-items-start align-items-sm-center gap-2">
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" id="male" value="male" checked>
      <label class="form-check-label" for="male">Male</label>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" id="female" value="female">
      <label class="form-check-label" for="female">Female</label>
    </div>
  </div>
</div>
<div class=" d-flex justify-content-between align-items-center">
