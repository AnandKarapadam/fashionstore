      <!-- In your EJS or HTML head -->
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
      <script>
        const urlParams = new URLSearchParams(window.location.search);
        let amount = urlParams.get("amount");
        const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked')?.value;



        if (amount) {
          document.getElementById("amount").value = amount;
        }

        document.getElementById("walletForm").addEventListener("submit", async function (e) {
          const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked')?.value;
          const enteredAmount = document.getElementById("amount").value.trim();
          if(enteredAmount){
            amount = enteredAmount;
          }

          e.preventDefault();
          const res = await fetch("/profile/wallet/pay", {
            method: "POST",
            headers: {
              "Content-Type": "application/json"
            },
            body: JSON.stringify({ amount })
          })

          const orderData = await res.json();

          if (!orderData.success) {
            Swal.fire('Hello!', 'This is a small popup:' + orderData.message, 'success');
            return;
          }

          const options = {
            key: orderData.key,
            amount: orderData.amount,
            currency: "INR",
            name: "RORITO FASHION",
            description: "Wallet Top-up",
            order_id: orderData.orderId,
            handler: async function (response) {
              const verifyRes = await fetch("/profile/wallet/verify", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(response)
              })

              const verifyData = await verifyRes.json();

              if (verifyData.success) {
                Swal.fire({
                  toast: true,
                  position: 'top', // 'top-start', 'bottom-end', etc.
                  icon: 'success',
                  title: 'Wallet Top-up Successful!',
                  showConfirmButton: false,
                  timer: 3000
                }).then(()=>window.location.href = "/profile/wallet");
                
              }
              else {
                alert("Payment failed:" + verifyData.message);
              }
            },
            theme: { color: "#000" }
          };

          if (selectedMethod === "card") {
            options.method = { card: true, upi: false, netbanking: false, wallet: false, paylater: false };
          } else if (selectedMethod === "upi") {
            options.method = { card: false, upi: true, netbanking: false, wallet: false, paylater: false };
          } else if (selectedMethod === "razorpay") {
            // Do nothing, allow Razorpay default options (card, UPI, wallet, netbanking, EMI, etc.)
          }
          const rzp = new Razorpay(options);
          rzp.open();

        })

      </script>