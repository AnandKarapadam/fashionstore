<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
const urlParams = new URLSearchParams(window.location.search);
const amount = urlParams.get("amount");
const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked')?.value;

if(amount){
  document.getElementById("amount").value = amount;
}

document.getElementById("walletForm").addEventListener("submit",async function (e) {
  
e.preventDefault();
 const res = await fetch("/profile/wallet/pay",{
  method:"POST",
  headers:{
    "Content-Type":"application/json"
  },
  body:JSON.stringify({amount,paymentMethod})
 })

 const orderData = await res.json();

 if(!orderData.success){
  alert("failed to create razorpay order");
  return;
 }

 const options = {
  key:orderData.key,
  amount:orderData.amount,
  currency:"INR",
  name:"RORITO FASHION",
  description:"Wallet Top-up",
  method: {
    upi: paymentMethod === "gpay" ? 1 : 0,
    card: paymentMethod === "card" ? 1: 0,
    wallet: paymentMethod === "razorpay" ? 1: 0
  },
  order_id:orderData._id,
  handler:async function (response) {
    const verifyRes = await fetch("/profile/wallet/verify",{
      method:"POST", 
      headers:{"Content-Type":"application/json"},
      body:JSON.stringify(response)
    })

    const verifyData = await verifyRes.json();

    if(verifyData.success){
      alert("Payment successfull and wallet updated!");
      window.location.href = "/profile/wallet"
    }
    else{
      alert("Payment failed:"+verifyData.message);
    }
  },
  theme:{color:"#000"}
 };
 const rzp = new Razorpay(options);
 rzp.open();

})

</script>