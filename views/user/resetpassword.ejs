<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>RORITO</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    h2 {
      font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
      letter-spacing: 2px;
    }
    .form-control {
      background-color: rgb(237, 237, 237);
    }
    p {
      font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    .wrapper {
      max-width: 800px;
      width: 100%;
    }
    img {
      width: 100%;
      height: auto;
      border-radius: 10px;
    }
  </style>
</head>
<body>

  <div class="container mt-5 pt-4 d-flex justify-content-center">
    <div class="wrapper">
      <div class="row border rounded-4 shadow p-4 mt-5 text-center">
        <div class="col-md-6">
          <h2 class="fw-semibold">Change Password</h2>
          <p>Please confirm your password.</p>
          <form id="passwordForm" >
            <input type="password" name="passOne" id="newPassword" class="form-control border border-dark mb-2" placeholder="New password" required>
            <div class="text-danger small" id="passworderror"></div>
            <input type="password" name="passTwo" id="confirmPassword" class="form-control border border-dark mb-2" placeholder="Confirm password" required>
            <div class="text-danger small" id="cpassworderror"></div>
            <div class="text-center">
              <button type="submit" class="btn btn-dark fw-semibold btn-sm mb-3">Change Password</button>
            </div>
          </form>
          <div class="text-center">
            <a href="/login" class="text-decoration-none fw-semibold text-secondary">Go back to Login page</a>
          </div>
        </div>
        <div class="col-md-6">
          <img src="images/resetpassword-img.avif" alt="">
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- SweetAlert -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


  <!-- Validation Script -->
  <script>
   document.getElementById('passwordForm').addEventListener('submit', function (e) {
  e.preventDefault();
document.getElementById("passworderror").innerText = "";
document.getElementById("cpassworderror").innerText = "";
  const passOne = document.getElementById('newPassword').value.trim();
  const passTwo = document.getElementById('confirmPassword').value.trim();
  const passwordRegex = /^(?=.*[A-Za-z])(?=.*\d).+$/;
  

    if (!passOne ) {
      document.getElementById("passworderror").innerText = "This field is mandatory!";
      return Swal.fire('Missing Fields', 'Please fill in both password fields.', 'warning');
    }else if( !passTwo){
      document.getElementById("cpassworderror").innerText = "This field is mandatory!";
      return Swal.fire('Missing Fields', 'Please fill in both password fields.', 'warning');
    }

    if (passOne.length < 6) {
      document.getElementById("passworderror").innerText = "Enter atleast 8 characters!";

      return Swal.fire('Weak Password', 'Password must be at least 6 characters long.', 'error');
    }
    else if(!passwordRegex.test(passOne)){
      document.getElementById("passworderror").innerText = "Password should contain character and numbers.";
      return Swal.fire('Weak Password', 'Password should contain character and numbers.', 'error');
    }

    if (passOne !== passTwo) {
      document.getElementById("cpassworderror").innerText = "Password do not match!";
      return Swal.fire('Mismatch', 'Passwords do not match.', 'error');
    }

   $.ajax({
      type: "POST",
      url: "/reset-password",
      data: { passOne, passTwo },
      success: function (res) {
        if (res.success) {
          Swal.fire({
            icon: 'success',
            title: 'Password Changed!',
            text: res.message ||'Redirecting to login...',
            timer: 2000,
            showConfirmButton: false
          }).then(() => {
            window.location.href = "/login";
          });
        } else {
          Swal.fire('Error', res.message || 'Something went wrong', 'error');
        }
      },
      error: function (xhr, status, err) {
        Swal.fire('Server Error', 'Please try again later.', 'error');
        console.error("AJAX error:", err);
      }
    });
  
});
  </script>
</body>
</html>
