<%- include("../partials/admin/header.ejs") %>
<%- include("../partials/admin/sidebar.ejs") %>


<div class="container border px-5 mt-2 pt-3 border-light rounded-4 w-50 shadow-sm">

    <div class="row text-center mt-3">
      <h3 class="fw-bold">ADD BANNER</h3>
      <hr>
    </div>
    <form action="/admin/add-banner" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-12 mb-3">
            <label for="title" class="form-label fw-semibold">Banner Title</label>
            <input type="text" class="w-100  border-1 border-secondary rounded-3 shadow-sm p-2" name="title" id="title" class="form-control">
        </div>
    </div>
    <div class="row">    
        <div class="col-12 mb-3">
            <label for="description" class="col-12 fw-semibold">Banner Description</label>
            <textarea class="w-100 border-1 border-secondary rounded-3 shadow-sm p-2" style="height: 150px;" name="description" id="description"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mb-3">
            <label for="startdate" class="form-label fw-semibold">Start Date</label>
            <input type="date" class="w-100 border-1 border-secondary rounded-3 shadow-sm p-2" name="startdate" id="startdate" class="form-control">
        </div>    
    </div>
    <div class="row">
        <div class="col-12 mb-3">
            <label for="enddate" class="form-label fw-semibold">End Date</label>
            <input type="date" class="w-100 border-1 border-secondary rounded-3 shadow-sm p-2" name="enddate" id="enddate" class="form-control">
        </div>    
    </div>
    <div class="row mt-2">
        <div class="col-12 mb-3">
            <label for="link" class="form-label fw-semibold">Link</label>
            <input type="text" class="w-100  border-1 border-secondary rounded-3 shadow-sm p-2" name="link" id="link" class="form-control">
        </div>
    </div>
    <div class="row mt-3 text-center">
        <div class="col-12 mb-3">
            <h5 class="text-secondary">Choose Banner Image</h5>
            <hr>
            <input type="file" class="w-100 border-1 border-secondary rounded-3 shadow-sm p-2" name="image" id="image" class="form-control">
        </div>    
    </div>
    
    <div class="row mt-4">
      <div class="col-12 mt-2 d-flex justify-content-center">
          <button type="submit" class="btn btn-dark fw-semibold ">Save</button>
      </div>
    </div>
    </form>
</div>

